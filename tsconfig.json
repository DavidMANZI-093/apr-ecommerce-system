{
	"compilerOptions": {
		// File Layout
		"rootDir": "./src",
		"outDir": "./dist",

		// Environment Settings
		"module": "commonjs", // Use commonjs for better compatibility
		"target": "es2020", // Target a stable ES version
		"lib": ["es2020"],
		"types": ["node"],

		// Ensure module resolution  is set to `node`
		"moduleResolution": "node",
		"esModuleInterop": true,

		// Other Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		// Recommended Options
		"strict": true,
		"skipLibCheck": true,

		// Disable these strict options for now to resolve the issue
		"noUncheckedIndexedAccess": false,
		"exactOptionalPropertyTypes": false,
		"isolatedModules": false,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
