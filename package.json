{
  "name": "apr-ecommerce-system",
  "version": "1.0.0",
  "description": "An e-commerce system for APR products",
  "license": "MIT",
  "author": "d3fault",
  "type": "commonjs",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec npx tsx src/server.ts",
    "format": "npx @biomejs/biome format --write ./src",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "npx tsx prisma/scripts/db-seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@trpc/server": "^11.5.1",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.5"
  }
}
